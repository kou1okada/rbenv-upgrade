#!/usr/bin/env bash
#
# update subcommand for rbenv.
# This script is distributed under the MIT license.
#

usage() {
  {
    echo "usage: rbenv update"
    echo
  } >&2

  [ -z "$1" ] || exit "$1"
}

# Provide rbenv completions
completion() {
  exit
}

while [ "$1" != "" ]; do
  case "$1" in
    --complete)
      completion
      shift
      ;;
    -h|--help)
      usage 0
      shift
      ;;
    *)
      if getopts "" opt; then
        case "$opt" in
          ?) usage 1;;
        esac
        shift $(( $OPTIND - 1 ))
      else
        REMAINS+=("$1")
        shift
      fi
      ;;
  esac
done

if [ "$REMAINS" != "" ]; then
  usage 1
fi

ls -d1 ~/.rbenv ~/.rbenv/plugins/* | while read i; do
   ( cd $i; pwd; git pull )
   echo
done
